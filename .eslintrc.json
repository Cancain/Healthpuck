{
  "root": true,
  "extends": ["react-app", "react-app/jest", "plugin:import/recommended", "prettier"],
  "plugins": ["import"],
  "ignorePatterns": [
    "mobile/.eslintrc.js",
    "mobile/.prettierrc.js",
    "mobile/babel.config.js",
    "mobile/metro.config.js",
    "mobile/jest.config.js",
    "mobile/index.js",
    "backend/dist/**",
    "build/**",
    "dist/**",
    "docs/static/**",
    "public/**",
    "node_modules/**"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
      }
    }
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "import/no-unresolved": "off",
        "import/named": "off",
        "import/namespace": "off"
      }
    }
  ],
  "rules": {
    "import/order": [
      "warn",
      {
        "groups": [
          ["builtin", "external"],
          ["internal", "parent", "sibling", "index"]
        ],
        "newlines-between": "always"
      }
    ]
  }
}
