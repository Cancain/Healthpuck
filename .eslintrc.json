{
  "root": true,
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:import/recommended",
    "prettier"
  ],
  "plugins": ["import"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"]
      }
    }
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "import/no-unresolved": "off",
        "import/named": "off",
        "import/namespace": "off"
      }
    }
  ],
  "rules": {
    "import/order": [
      "warn",
      {
        "groups": [["builtin", "external"], ["internal", "parent", "sibling", "index"]],
        "newlines-between": "always"
      }
    ]
  }
}
